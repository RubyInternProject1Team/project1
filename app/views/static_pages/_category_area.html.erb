<div class="main-container col1-layout">
  <div class="container">
    <div class="row">
      <div class="col-main col-sm-12 col-xs-12">
        <div class="shop-inner">
          <div class="page-title">
            <h2><%= t ".Food & Drink" %></h2>
          </div>
          <div class="product-grid-area">
            <ul class="products-grid">
              <% if @products.any? %>
                <%= render @products %>
              <% else %>
                <p><%= t ".no_item" %></p>
              <% end %>
            </ul>
          </div>
          <% if @products.any? %>
            <%== (@pagy) %>
          <% else %>
            <div class="pagination-area ">
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>